<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_margin="8dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SettingActivity">

    <ImageView
        android:src="@drawable/outline_drag_handle_black_24"
        android:id="@+id/imageButton"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/history_box"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableStart="@drawable/history_icon"
        android:text="@string/history_tytle"
        android:textSize="@dimen/textSize_Large"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageButton" />

    <TextView
        android:id="@+id/info_box"
        android:textSize="@dimen/textSize_Large"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:drawableStart="@drawable/info_icon"
        android:text="@string/info_title"
        app:layout_constraintStart_toStartOf="@+id/history_box"
        app:layout_constraintTop_toBottomOf="@+id/history_box" />

    <TextView
        android:id="@+id/tools_box"
        android:textSize="@dimen/textSize_Large"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:drawableStart="@drawable/settings_icon"
        android:text="@string/tools"
        app:layout_constraintStart_toStartOf="@+id/info_box"
        app:layout_constraintTop_toBottomOf="@+id/info_box" />


</androidx.constraintlayout.widget.ConstraintLayout>